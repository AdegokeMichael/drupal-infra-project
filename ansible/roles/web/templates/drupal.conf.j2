<VirtualHost *:80>
    ServerAdmin webmaster@localhost
    DocumentRoot {{ drupal_root }}

    <Directory {{ drupal_root }}>
        Options Indexes FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/drupal_error.log
    CustomLog ${APACHE_LOG_DIR}/drupal_access.log combined
</VirtualHost>
